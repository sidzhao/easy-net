@page
@model EasyNet.Identity.EntityFrameworkCore.UI.Areas.Identity.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "找回密码";
}

<div class="auth-form-header">
    找回密码
</div>
<div class="auth-form-body">
    <form id="account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label>请输入您的电子邮件地址, 我们将向您发送密码重置链接</label>
            <input asp-for="Input.Email" placeholder="邮件" class="form-control" />
        </div>
        <div class="form-group">
            <button id="login-submit" type="submit" class="btn btn-primary btn-block">发送重置密码邮件</button>
        </div>
    </form>
</div>